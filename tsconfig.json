{
	"compilerOptions": {
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"lib": ["ES2020", "DOM"],
		"module": "ESNext",
		"target": "ES2020",
		"outDir": "./dist",
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"noEmit": true,
		"allowImportingTsExtensions": true,
	},
	"include": [
		"src/**/*",
		"demo/**/*",
		"test/**/*",
		"vite.config.ts",
		"vitest.config.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
  